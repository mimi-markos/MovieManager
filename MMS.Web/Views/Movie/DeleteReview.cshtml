@model Review

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/movie", "Movies"),
    ("/details", "Details"), 
    ($"/movie/details/{Model.MovieId}", $"{Model.MovieId}"),
    ("","Delete Review") 
})>

<div class="card rounded shadow p-3">
    <div class="row pl-3">

        <!-- Review summary details display -->
        <h3 class="mb-5">Are you sure you want to delete this Review?</h3>
        <dl class="row">       
            <dt class="col-5">Name:</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">Created On:</dt>
            <dd class="col-7">@Model.CreatedOn.ToShortDateString()</dd>
                
            <dt class="col-5">Comment:</dt>
            <dd class="col-7">@Model.Comment</dd>

            <dt class="col-5">Rating:</dt>
            <dd class="col-7">@Model.Rating</dd>
        </dl>         

        <div class="mt-4">

        <!-- form to submit post request to DeleteReviewConfirm action 
        submit input button and cancel link navigates to Details action -->
        <form asp-controller="Movie" asp-action="DeleteReviewConfirm" type="post"> 
            <input type="hidden" asp-for="Id"/> 

            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Cancel</a> 
        </form>
    </div>     

</div>
