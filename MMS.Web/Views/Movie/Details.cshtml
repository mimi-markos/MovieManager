@model Movie

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"),
    ("/movie", "Movies"), 
    ("","Details") 
})>

<div class="card rounded mt-4 p-3">
    <div class="card-header bg-light">
        <h2 class="my-4">@Model.Title (@Model.Year)</h2>
    </div>
    <div class="row pl-3">
        <!-- Movie Details -->
        <div class="col-8 pt-4">
            <dl class="row mt-4">      
        
                <dt class="col-3">Director:</dt>
                <dd class="col-8">@Model.Director</dd>
                
                <dt class="col-3">Duration:</dt>
                <dd class="col-8">@Model.Duration min</dd>
                
                <dt class="col-3">Budget:</dt>
                <dd class="col-8">$@Model.Budget million</dd>

                <dt class="col-3">Genre:</dt>
                <dd class="col-8">@Model.Genre</dd>

                <dt class="col-3">Cast:</dt>
                <dd class="col-8">@Model.Cast</dd>

                <dt class="col-3">Rating:</dt>
                <dd class="col-8">@Model.Rating%</dd>

                <dt class="col-3">Plot:</dt>
                <dd class="col-8">@Model.Plot</dd>
            </dl>              
        </div>

         <!-- Movie poster image -->
        <div class="col-4 pt-4">
            <img src="@Model.PosterUrl" class="img-fluid">
        </div>
        
    </div>

    <!-- action options -->
    <div class="row pl-3">

        <!-- navigation link to Index action -->
        <a asp-controller="Movie" asp-action="Index" class="btn btn-sm btn-info mr-2">
            <i class="bi bi-film mr-2"></i>Movie List
        </a>
        
        <!-- navigation link to Edit action --> 
        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary mr-2">
            <i class="bi bi-pencil-square mr-2"></i>Edit Movie
        </a>
        
        <!-- navigation link to Delete action --> 
        <a data-toggle="modal" data-target="#deleteModal" class="btn btn-sm btn-light ml-5">
            <i class="bi bi-trash mr-2"></i>Delete Movie
        </a>

     </div>
     
     <!-- Delete movie modal -->
     <partial name="_DeleteModal"/>

     <!-- Associated movie reviews --> 
     <partial name="_Reviews"/>
     
</div>



