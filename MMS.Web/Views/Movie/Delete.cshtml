@model Movie

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"),
    ("/movie", "Movies"), 
    ("","Delete") 
})>

<div class="card rounded shadow p-3">
    <div class="row pl-3">
        
        <!-- Movie summary details display -->
        <div class="col-8 pt-3">   
            <h3 class="mb-5">Are you sure you want to delete this movie?</h3>
            <dl class="row">       
                <dt class="col-2">Title:</dt>
                <dd class="col-10">@Model.Title</dd>

                <dt class="col-2">Director:</dt>
                <dd class="col-10">@Model.Director</dd>
                
                <dt class="col-2">Year:</dt>
                <dd class="col-10">@Model.Year</dd>

                <dt class="col-2">Genre:</dt>
                <dd class="col-10">@Model.Genre</dd>

                <dt class="col-2">Cast:</dt>
                <dd class="col-10">@Model.Cast</dd>

                <dt class="col-2">Rating:</dt>
                <dd class="col-10">@Model.Rating%</dd>

                <dt class="col-2">Plot:</dt>
                <dd class="col-10">@Model.Plot</dd>
            </dl>         
        </div>
        
        <div class="col-4">
            <img src="@Model.PosterUrl" class="img-fluid">
        </div>
    </div>
    
    <div class="row pl-3">

        <!-- form to submit post request to DeleteConfirm action 
        submit input button and cancel link navigates to Index action -->
        <form asp-controller="Movie" asp-action="DeleteConfirm" type="post"> 
            <input type="hidden" asp-for="Id"/> 
            <input type="submit" value="Delete" class="btn btn-danger"> 
            <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Cancel</a>
        </form>
    </div>
        
</div>
