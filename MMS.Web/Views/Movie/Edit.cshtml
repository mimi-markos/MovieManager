@model Movie

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"), 
    ("/movie", "Movies"),
    ("", "Edit") 
})>

<h2 class="my-4">Edit Movie</h2>

<div class="card rounded shadow p-3">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- hidden id to ensure the movie passed to the controller is complete -->
        <input type="hidden" asp-for="Id" class="form-control"/>

        <!-- form inputs -->
        <partial name="_FormInputs"/>
        
        <!-- submit and cancel links - navigates to Index action -->
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success"/>
            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
